<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head.ejs %>
</head>

<body>
    <% include ../partials/header.ejs %>
        <% include ../partials/alert-message.ejs %>
            <div class="my-3 my-md-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 mx-auto">
                            <form class="card">
                                <div class="card-body">
                                    <h3 class="card-title">Edit User</h3>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="form-label" for="name">Name</label>
                                                <input name="first_name" type="text"  id="name" class="form-control" placeholder="Name" minlength="3" maxlength="64" size="32" value="" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="form-label" for="surname">Surname</label>
                                                <input name="last_name" type="text" id="surname" class="form-control" placeholder="Surname" minlength="3" maxlength="64" size="32" value="" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="form-label" for="email">Email address</label>
                                                <input name="email" type="email" id="email" class="form-control" placeholder="Email@Example.com" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-right">
                                    <button type="button" class="btn btn-danger delete-this">Delete User</button>
                                    <button type="reset" class="btn btn-primary">Reset Changes</button>
                                    <button type="submit" class="btn btn-primary">Create User</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% include ../partials/footer.ejs %>
                <!-- Scripts -->
                <script src="js/alert-message.js"></script>
</body>

</html>