<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head.ejs %>
    <script src="/ckeditor/ckeditor.js"></script>
</head>

<body>
  <% include ../partials/header.ejs %>
  <% include ../partials/flash-message.ejs %>
  <% include ../partials/delete-alert-message.ejs %>
  <div class="my-3 my-md-5">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">
          Dashboard
        </h1>
      </div>
      <div class="row row-cards row-deck">
        <form method="post">
          <div class="form-group col-md-12">
            <label class="form-label" for="callToAction">Call to Action Text</label>
            <textarea class="form-control" id="callToAction" name="content" rows="2" placeholder="Content.." required></textarea>
          </div>
          <button type="submit" class="btn btn-secondary">Homepage Title Submit</button>
        </form>
        <div class="col-lg-12">
          <div class="card">
            <div class="table-responsive">
              <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
                <thead>
                  <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Last Login</th>
                    <th></th>
                  </tr>
                </thead>
                <% if (users) { %>
                  <%= console.log(users)%>
                  <tbody>
                    <% users.forEach(function(user) {%>
                      <tr>
                        <input type="hidden" class="this_name" value="<%=`${user.first_name} ${user.last_name}` %>" />
                        <input type="hidden" class="this_id" value="<%=user.user_id %>" />
                        <td>
                          <div class="name"><%= `${user.first_name} ${user.last_name}` %></div>
                        </td>
                        <td>
                          <div class="email"><%=user.email%></div>
                        </td>
                        <td>
                          <div class="small text-muted">Activity</div>
                          <div><%= user.last_succesful_login%></div>
                        </td>
                        <td class="text-center">
                          <div class="item-action dropdown">
                            <a href="javascript:void(0)" data-toggle="dropdown" class="icon" aria-expanded="false">
                              <i class="fe fe-more-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; transform: translate3d(15px, 20px, 0px); top: 0px; left: 0px; will-change: transform;">
                              <a href="/users/edit-user/<%=user.user_id %>" class="dropdown-item">
                              <i class="dropdown-icon fe fe-edit-2"></i> Edit User </a>
                            <div class="dropdown-divider"></div>
                              <a href="javascript:void(0)" class="dropdown-item delete-this">
                              <i class="dropdown-icon fe fe-delete"></i> Delete User</a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                <% } %>
              </table>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Current Pages</h3>
            </div>
            <div class="table-responsive">
              <table class="table card-table table-vcenter text-nowrap">
                <thead>
                  <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Published</th>
                    <th>Home Page Grid</th>
                    <th>Navigation</th>
                    <th>Page Grid Order</th>
                    <th>Options</th>
                    <th></th>
                  </tr>
                </thead>
                <% if (typeof pages === 'object') { %>
                  <tbody>
                    <% pages.map(function(page){%>
                      <form action="/users/page-order" method="post">
                        <tr>
                          <input type="hidden" class="page_id" value="<%=page.page_id %>" />
                          <td>
                            <img class="image_thumbnail" src="<%=page.banner_location%>" alt="Page image">
                          </td>
                          <td>
                            <a href="invoice.html" class="text-inherit"><%=page.title%></a>
                          </td>
                          <td>
                            <label class="custom-control custom-checkbox custom-control-inline">
                              <input type="checkbox" class="custom-control-input" name="published" value="option1" <%= page.is_published ? "checked" : ""%>>
                              <span class="custom-control-label"></span>
                            </label>
                          </td>
                          <td>
                            <label class="custom-control custom-checkbox custom-control-inline">
                              <input type="checkbox" class="custom-control-input" name="page_grid" value="option1"
                              <%= page.is_homepage_grid ? "checked" : ""%>>
                              <span class="custom-control-label"></span>
                            </label>
                          </td>
                          <td>
                            <label class="custom-control custom-checkbox custom-control-inline">
                              <input type="checkbox" class="custom-control-input" name="navigation_bar" value="option1"
                              <%= page.is_nav_menu ? "checked" : ""%>>
                              <span class="custom-control-label"></span>
                            </label>
                          </td>
                          <td>
                            <input type="text" class="form-control page-order" name="page_order" placeholder="1">
                          </td>
                          <td>
                            <button name="update_changes" type="button" class="btn btn-secondary btn-sm">Save</button>
                          </td>
                        </form>
                        <td>
                          <a href="/users/edit-page/<%=page.page_id %>" class="btn btn-secondary btn-sm">Edit Page</a>
                        </td>
                      </tr>
                    <%})%>
                  </tbody>
                <% } %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ../partials/footer.ejs %>
  <!-- Scripts -->
  <script src="/js/notification-message.js"></script>
  <script src="/js/alert-message.js"></script>
  <script>
              // Replace the <textarea id="editor1"> with a CKEditor
              // instance, using default configuration.
              
                CKEDITOR.replace( 'callToAction' );
              
  </script>
</body>

</html>