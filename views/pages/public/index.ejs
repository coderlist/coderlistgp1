<!DOCTYPE html>
<html>

<head>
    <% include ../../partials/head.ejs %>
</head>

<body>
    <header>
        <% include ../../partials/header.ejs %>
    </header>
    <main>
        <div class="page-title">
            <% if (typeof callToAction === "object" && callToAction) { %></h5>
            <div><%-callToAction.description%></div>
            <% } else { %>
            <h5>Call to action text</h5>
            <% } %>
        </div>
        <div class="card-deck">
            <% if (typeof pages === "object" && pages) { %>
              <% pages.map(function(page){ %>
                <div class="card">
                    <div class="card-overlay"></div>
                    <img class="card-img" src="<%=page.banner_location%>"
                        alt="<%=page.image_name%>">
                    <div class="card-title"><%=page.title%></div>
                    <div class="card-body">
                        <div class="card-body-title">
                            <%=page.title%>
                        </div>
                        <div class="card-body-text">
                            <%=page.page_description%>.
                        </div>
                        <div class="card-body-url">
                            <a href="/pages/<%=page.link%>" target="_blank"><%=page.title%></a>
                        </div>
                    </div>
                </div>
              <% })%>
            <% } %>
        </div>
        </div>
    </main>
    <script src="//cdnjs.cloudflare.com/ajax/libs/velocity/2.0.3/velocity.min.js"></script>
    <% include ../../partials/footer.ejs %>
    <% include ../../partials/flash-message.ejs %>
</body>

</html>