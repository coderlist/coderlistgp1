<!DOCTYPE html>
<html>

<head>
    <% include ../../partials/head.ejs %>
</head>

<body>
    <header>
        <% include ../../partials/header.ejs %>
    </header>
    <main>
            <div class="container">
                    <form class="card" action="" method="post">
                        <div class="card-body">
                            <div class="card-title"> Contact us</div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="name">Name</label>
                            <input name="first_name" type="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Name.." minlength="3" maxlength="64" size="32"  value="" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="name">Surname</label>
                            <input name="last_name" type="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Surname.." minlength="3" maxlength="64" size="32"  value="" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="email">Email address</label>
                            <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email.." minlength="3" maxlength="64" size="32"  value="" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label"></label>
                            <textarea class="form-control" name="message" rows="6" placeholder="Message..." required></textarea>
                        </div>
                        <div class="card-footer text-right">
                            <button type="reset" class="btn btn-primary">Reset Changes</button>
                            <button type="submit" class="btn btn-primary">Send Email</button>
                        </div>
                    </form>
                </div>
        <% include ../../partials/flash-message.ejs %>   
    </main>
    <% include ../../partials/footer.ejs %>
</body>
</html>